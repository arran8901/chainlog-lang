age(john, 33).
age(peter, 43).
age(alice, 13).
age(felix, 5).
age(joan, 90).
age(test1, Y) :- number(Y), Y > 100.
age(frank, 55).
age(martin, 41).
age(alex, 24).
age(test2, Y) :- number(Y), Y > 100.
age(myrtle, 69).

old(X) :- age(X, Age), Age >= 40 or member(X, [test1, test2]).
old_(X) :- age(X, Age), Age >= 40, not (0 is Age mod 2) or member(X, [test1, test2]).

bad(X, Y) :- number(X) -> Y = 3 ; Y = 5.

